<?xml version="1.0" encoding="UTF-8"?>

<assembly xmlns="http://maven.apache.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">

	<id>source</id>
	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>isis-${project.parent.parent.version}</baseDirectory>

	<fileSets>
		<fileSet>
			<directory>../..</directory>
			<outputDirectory></outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
		    <excludes>
				<exclude>.metadata/**</exclude>
				<exclude>**/.project</exclude>
				<exclude>**/.classpath</exclude>
				<exclude>**/.settings/**</exclude>
				<exclude>**/target/**</exclude>
				<exclude>**/*.ser</exclude>
				<exclude>**/svn*.ps1</exclude>
				<exclude>**/doxygen.cfg</exclude>
				<exclude>How to build [[NAME]] from source.doc</exclude>
	      	</excludes>
		</fileSet>

	</fileSets>

</assembly>

